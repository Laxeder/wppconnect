{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@services/*": ["./src/services/*"],
      "@messages/*": ["./src/messages/*"],
      "@default/*": ["./src/default/*"],
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@api/*": ["./src/api/*"]
    }
  },
  "include": ["src"]
}
